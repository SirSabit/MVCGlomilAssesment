@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
        </div>
        <div class="col-4" id="register">
            <h3 style="text-align:center">Register</h3>
            <form asp-action="Index" asp-controller="Register" method="post">
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="Name"></span>
                    <input type="text" class="form-control" placeholder="Enter your Name" asp-for="Name" />
                    <span class="text-muted"><small>For instance: Peter</small></span>
                </div>
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="Surname"></span>
                    <input type="text" class="form-control" placeholder="Enter your Surname" asp-for="Surname" />
                    <span class="text-muted"><small>For instance: Parker</small></span>
                </div>
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="NickName"></span>
                    <input type="text" class="form-control" placeholder="Enter your Nickname" asp-for="NickName" />
                    <span class="text-muted"><small>For instance: Spiderman</small></span>
                </div>
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="BirthDate"></span>
                    <input type="datetime" class="form-control" placeholder="Enter your Birthdate" asp-for="BirthDate" />
                    <span class="text-muted"><small>For instance: 09/06/1969</small></span>
                </div>
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="Password"></span>
                    <input type="password" class="form-control" placeholder="Enter Your Password" asp-for="Password" />
                </div>
                <div class="form-group col">
                    <span id="errorSpan" asp-validation-for="PasswordCheck"></span>
                    <input type="password" class="form-control" placeholder="Enter Your Password Again" asp-for="PasswordCheck" />
                </div>
                <div class="form-group col">
                    <button type="submit" class="btn btn-danger btn-block">Register</button>

                    <small>If you have an account allready? <a asp-controller="Login" asp-action="Index">Login</a></small>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

