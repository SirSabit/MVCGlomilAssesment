
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
        </div>
        <div class="col-4" id="register">
            <h3 style="text-align:center">Register</h3>
            <form asp-action="Index" asp-controller="Register" method="post">
                <div class="form-group col">
                    <input type="text" class="form-control" placeholder="Enter your Name" name="Name" />
                </div>
                <div class="form-group col">
                    <input type="text" class="form-control" placeholder="Enter your Surname" name="Surname" />
                </div>
                <div class="form-group col">
                    <input type="text" class="form-control" placeholder="Enter your Nickname" name="NickName" />
                </div>
                <div class="form-group col">
                    <input type="datetime" class="form-control" placeholder="Enter your Birthdate" name="BirthDate" />
                </div>
                <div class="form-group col">
                    <input type="password" class="form-control" placeholder="Enter Your Password" name="Password" />
                </div>
                <div class="form-group col">
                    <input type="password" class="form-control" placeholder="Enter Your Password Again" name="PasswordCheck" />
                </div>
                <div class="form-group col">
                    <button type="submit" class="btn btn-danger btn-block">Register</button>

                    <small>If you have an account allready? <a href="#">Login</a></small>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

