@model ProfileViewModel
@{
    ViewData["Title"] = "Index";
}
<style>
    .bg {
        width: 100%;
        height: 100vh;
        background-color: hsla(0, 100%, 90%, 0.3);
    }

    #login {
        position: absolute;
        top: 15vh;
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px #000;
    }
</style>
<div class="container-fluid justify-content-center">
    <div class="row justify-content-center">
        <div class="col-4">
        </div>
        <div class="col-4" id="login">
            <h3 style="text-align:center">Profile</h3>
           <div class="col">
               <fieldset>
                   <label><strong>Name</strong></label><input type="text" class="form-control" readonly value="@Model.Name" /><br />
                   <label><strong>Surname</strong></label><input type="text" class="form-control" readonly value="@Model.Surname" /><br />
                   <label><strong>Nickname</strong></label><input type="text" class="form-control"  readonly value="@Model.Nickname"/><br />
                   <label><strong>Birthdate</strong></label><input  type="text" class="form-control" readonly value="@Model.BirthDate"/>
               </fieldset>
           </div>
        </div>
        <div class="col-4"></div>
    </div>
</div>

